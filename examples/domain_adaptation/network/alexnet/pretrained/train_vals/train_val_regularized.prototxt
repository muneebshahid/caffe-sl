    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}

# ------------------------------------------------------------------- Siamese Loss
layer {
  name: "siamese_loss"
  type: "ContrastiveLoss"
  bottom: "fc8_n"
  bottom: "fc8_n_p"
  bottom: "sim_labels"
  top: "siamese_loss"
  contrastive_loss_param {
    margin: 1
  }
}

layer {
  name: "silencer"
  type: "Silence"
  bottom: "dummy_labels"
}