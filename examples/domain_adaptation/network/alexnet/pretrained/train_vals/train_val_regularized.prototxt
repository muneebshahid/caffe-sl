# ------------------------------------------------------------------------ fc 8

layer {
  name: "fc8_n"
  type: "InnerProduct"
  bottom: "fc7"
  top: "fc8_n"
  param {
    name: "fc8_n_w"
    lr_mult: 10
    decay_mult: 1
  }
  param {
    name: "fc8_n_b"
    lr_mult: 20
    decay_mult: 0
  }
  inner_product_param {
    num_output: 128
    weight_filler {
      type: "xavier"
    }
    bias_filler {
      type: "constant"
      value: 0
    }
  }
}

layer {
  name: "fc8_n_p"
  type: "InnerProduct"
  bottom: "fc7_p"
  top: "fc8_n_p"
  param {
    name: "fc8_n_w"
    lr_mult: 10
    decay_mult: 1
  }
  param {
    name: "fc8_n_b"
    lr_mult: 20
